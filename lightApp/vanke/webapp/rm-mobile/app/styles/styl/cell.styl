@media screen and (-webkit-min-device-pixel-ratio: 1.5)
  .border-t
    ui-border(top)

  .border-b
    ui-border(bottom)

.section-cell
  //background-color #FFFFFF
  margin px2rem(10) 0
  .cell
    display block
    height px2rem(120)
    line-height px2rem(120)
    position: relative
    background-color #fff;
    &.arrow-right
      color border-color
    &.arrow-right:after
      position: absolute
      content ""
      display block;
      arrow()
      right default-inner;
      top: 50%
      margin-top: px2rem(-10px)
      transform rotate(-135deg)
    .table-cell
      margin 0 default-inner * 2 0 default-inner
      color base-text-color
      font-size: 16px
  .schedule-cell
    padding-left default-inner


.home-cell .cell-seprate
  margin-bottom 10px;

.schedule-main, .schedule-address
  padding px2rem(20) 0
  display table
  width 100%;
  .date
    width 25%
    display table-cell
    vertical-align: middle
    font-size: 16px
    p
      font-size: 12px
      color color-gray
  .name
    width 32%
    display table-cell
    vertical-align: middle
    color rgb(46 46 51)
  .time
    width 42%
    display table-cell
    vertical-align: middle
    color color-gray

