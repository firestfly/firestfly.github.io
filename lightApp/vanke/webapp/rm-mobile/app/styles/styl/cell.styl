//  sign-in
.sign-cell
  padding-left: default-inner;
  position: relative
  &:before
    position: absolute;
    display: block;
    content: '';
    z-index: 5;
    width: 1px;
    height: 100%;
    left: 16px;
    background-color: rgb(227, 230, 228);
  &:after
    position: absolute;
    display: block;
    content: '';
    z-index: 5;
    left: 14px;
    top: 12px;
    width: 5px;
    height: 5px;
    -webkit-border-radius: 100%;
    background-color: rgb(227, 230, 228);

.sign-main
  margin-left: default-inner;
  padding px2rem(15);

.sign-list
  position: relative
  padding-left 42px;
  min-height 20px;
  color #4B4B50
  .sign-lebel
    position: absolute
    left: 0
    top 0
    color color-gray;

