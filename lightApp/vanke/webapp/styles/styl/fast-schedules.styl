.fs-container
  display flex
  padding 10px 15px
  width 100%
  flex-direction column
  .fs-header
    width 100%
    display flex
    padding 10px
    .fs-company
      margin-right 20px
  .fs-operation
    width 100%
    display flex
    flex-direction column
    .fs-header
      color #999999
      width 100%
    .fs-body
      display: flex
      .fs-body-post
        padding 10px
        width 20%
        .fs-search
          div
            padding-left 0
            margin-left 0
          .row
            margin 0
          .col-md-3
            width 100%
            padding-right 0
      .fs-body-shift
        width 30%
        padding 10px
        .fs-search
          width 100%
          .bootstrap-select
            width 100%
      .fs-body-employee
        width 50%
        padding 10px
        margin-top -20px
        .fs-prompt
          height 20px
          color #999
          font-size 12px
          margin-left 8px
        .fs-search
          display flex
          .fs-search-name
            margin-right 10px
            width 50%
          .fs-search-job
            margin-left 10px
            width 50%
            .bootstrap-select
              width 100%
  .fs-info
    display flex
    flex-direction column
    width 100%
    padding 10px
    .fs-title
      display flex
      width 100%
      .fs-prompt
        color #999
      div
        flex 1
        display flex
        justify-content center
        &:first-child
          justify-content flex-start
        .fs-btn-info
          background-color #5cb85c
          color white
          padding 6px 15px
          border-radius 4px
          border 1px solid #ccc
          text-align center
          &:hover
            background-color darken(#5cb85c, 10)

.fs-table
  width 100%
  overflow auto
  table
    width 100%
    text-align center
    border 1px solid rgb(225, 225, 232)
    thead
      th
        background rgb(247, 247, 249)
        text-align center
        &.basewidth
          width 8.333333%
        &.doublewidth
          width 16.666667%
    tr, td, th
      padding 5px
      border 1px solid rgb(225, 225, 232)
    tr
      &.selected
        td
          color: #31708f;
          background-color: #d9edf7;
          border-color: #bce8f1;
      &.unselected,
      &.normal
        td
          background-color transparent
      &.warning
        td
          color: #a94442;
          background-color: #f2dede;
          border-color: #ebccd1;

.fs-input
  padding 4px 8px
  border-radius 4px
  border 1px solid #ccc
  width 100%

table
  &.clone
    margin-top 15px
    width 100%
    text-align center
    border 1px solid rgb(225, 225, 232)
    background rgb(247, 247, 249)
    thead
      th
        padding 5px
        text-align center

.fs-timeFrame
  margin-top 20px
  display flex
  align-items center
  .input-group
    flex 1

.fs-footer
  text-align center
  margin-top 20px
  button
    width 80px

.headerSpacer
  height 50px

.scrollableContainer
  height 181px
  margin-top 20px

