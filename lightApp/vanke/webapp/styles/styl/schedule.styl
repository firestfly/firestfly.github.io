[data-tip] {
  position: relative
  overflow: visible
}

[data-tip]:before,
[data-tip]:after {
  position: absolute;
  transform: translateX(-50%);
  opacity: 0;
  transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s ease;
  visibility: hidden;
  font-size: 12px;
  line-height: 12px;
  bottom: 100%;
  left: 50%;
}

[data-tip]:before {
  content: '';
  border: 6px solid transparent;
  margin-bottom: -12px;
  border-top-color: #333;
}

[data-tip]:after {
  content: attr(data-tip);
  padding: 7px 10px;
  background-color: #333;
  border-radius: 2px;
  display: block;
  color: #fff;
  white-space: nowrap;
  font-weight: normal;
}

[data-tip]:hover:before,
[data-tip].data-tip-visible:before,
[data-tip]:hover:after,
[data-tip].data-tip-visible:after
  opacity: 1;
  visibility: visible;
  z-index: 9999;
  transform: translateX(-50%) translateY(-8px);

