<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>通用配置信息</comment>

    <entry key="env">prod</entry>

    <!-- 站点版本号 -->
    <entry key="version.num">0.6</entry>
    <entry key="version.date">20160324</entry>

	<!--系统登录模式，local：本地登录-->
    <entry key="Profile.Security.Login_Mode">oauth</entry>

    <!--SSO单点登录的地址-->
    <entry key="Profile.SSO.Server_Url">http://localhost:8080/sso/openid</entry>

    <!--oauth2.0客户端ID-->
    <entry key="Profile.oauth.client_id">50bc393fb24fd59e647278de8f46e38d</entry>

    <!--oauth2.0客户端密钥-->
    <entry key="Profile.oauth.client_secret">fea24ce1a64211e5bed4985aeb8bdd9c</entry>

    <!--oauth2.0认证地址-->
    <entry key="Profile.oauth.url">https://4009515151.com/api/lebang/oauth/authorize</entry>

    <!--oauth2.0权限范围-->
    <entry key="Profile.oauth.scopes">r-staff</entry>

    <!--oauth2.0获取access_token权限类型-->
    <entry key="Profile.oauth.access_token_grant_type">authorization_code</entry>

    <!--oauth2.0刷新access_token权限类型-->
    <entry key="Profile.oauth.refresh_token_grant_type">refresh_token</entry>

    <!--oauth2.0回调地址-->
    <entry key="Profile.oauth.redirect_uri">http://crm.vankeservice.com/oauth/token</entry>

    <!--oauth2.0返回值-->
    <entry key="Profile.oauth.response_type">code</entry>

    <!--oauth2.0获取access_token地址-->
    <entry key="Profile.oauth.access_token_url">https://4009515151.com/api/lebang/oauth/access_token</entry>

    <!--oauth2.0刷新access_token地址-->
    <entry key="Profile.oauth.user_info_url">https://4009515151.com/api/lebang/staffs/me?access_token=</entry>

    <!--oauth2.0注销access_token地址-->
    <entry key="Profile.oauth.revoke_url">https://4009515151.com/api/lebang/oauth/revoke</entry>

    <!--Session超时时间-->
    <entry key="Profile.SessionMaxTime">3600</entry>

    <!--portal站点-->
    <entry key="portalWeb">http://crm.vankeservice.com</entry>
    <!--静态资源站点-->
    <entry key="staticWeb">http://static.crm.vankeservice.com</entry>
    <!-- 安全管理服务 -->
    <entry key="adminWeb">http://10.0.72.69:16905</entry>

