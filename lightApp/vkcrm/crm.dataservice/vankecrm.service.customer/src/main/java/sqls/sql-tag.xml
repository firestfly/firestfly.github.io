<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>客户标签sql</comment>

    <!-- 根据客户id查询标签信息-->
    <entry key="sql.query.tags">
        <![CDATA[
		SELECT
            id, customerid, contentId
        FROM
            dim_cust_tags
        WHERE
            customerid = #customerId#
            and isDeleted=0
	    ]]>
    </entry>

    <!-- 添加客户标签 -->
    <entry key="sql.insert.tag">
        <![CDATA[
        INSERT INTO `dim_cust_tags`
        (`id`, `customerid`, `contentId`, `creator`, `creatorId`, `createTime`)
        VALUES
        (#id#, #customerid#,
        #contentId#,
        #creator#, #creatorId#, now());
        ]]>
    </entry>

    <!-- 删除客户标签 -->
    <entry key="sql.delete.tag">
        <![CDATA[
        update dim_cust_tags
        set isDeleted = 1,
        deleter=#deleter#,
        deleterId=#deleterId#,
        deleteTime=NOW()
        WHERE id = #id#
        ]]>
    </entry>

</properties>
